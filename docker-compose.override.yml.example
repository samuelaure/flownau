services:
  app:
    container_name: flownau
    environment:
      - DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@shared_postgres:5432/${POSTGRES_DB}?schema=public
      - REDIS_HOST=shared_redis
    depends_on: []
    networks:
      - shared-mesh
    ports: []
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.flownau.rule=Host(`${PUBLIC_DOMAIN:-flownau.localhost}`)"
      - "traefik.http.routers.flownau.entrypoints=web"
      - "traefik.http.services.flownau.loadbalancer.server.port=3000"
      - "traefik.docker.network=shared-mesh"

  postgres:
    profiles: [disabled]

  redis:
    profiles: [disabled]

networks:
  shared-mesh:
    external: true
