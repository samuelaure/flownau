# --- Infrastructure: Database & Cache ---
# PostgreSQL Connection String
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/flownau?schema=public
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=flownau

# Redis for BullMQ Queue
REDIS_HOST=localhost
REDIS_PORT=6379

# --- Infrastructure: Cloudflare R2 (Storage) ---
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://pub-your_public_id.r2.dev

# --- Authentication (NextAuth.js) ---
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Initial Admin Seeding
ADMIN_EMAIL=admin@flownau.com
ADMIN_PASSWORD=change_this_password_in_prod

# --- Security ---
# 32 characters key for encrypting social tokens in DB
ENCRYPTION_KEY=your_32_chars_encryption_key_here

# --- System Notifications (Telegram) ---
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# --- Environment & Debugging ---
NODE_ENV=development
LOG_LEVEL=info

# --- Media Processing Limits (Optional) ---
MAX_VIDEO_SIZE_MB=80
MAX_AUDIO_SIZE_MB=15
# FFMPEG_PATH=/usr/bin/ffmpeg
