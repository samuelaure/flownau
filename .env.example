# --- Application ---
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
LOG_LEVEL=info

# --- Database ---
# Default Docker credentials
POSTGRES_USER=flownau_user
POSTGRES_PASSWORD=local_dev_password
POSTGRES_DB=flownau
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@shared_postgres:5432/${POSTGRES_DB}?schema=public

# --- Infrastructure ---
PUBLIC_DOMAIN=flownau.localhost

# --- Redis ---
REDIS_HOST=shared_redis
REDIS_PORT=6379
REDIS_PASSWORD=

# --- Authentication ---
AUTH_SECRET=your_super_secret_key_here
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true
ENCRYPTION_KEY=your_encryption_key_32_chars_min

# --- Cloudflare R2 ---
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ENDPOINT=
R2_BUCKET_NAME=
R2_PUBLIC_URL=

# --- Initial Admin Setup ---
# These are used to create the first user if the database is empty.
INITIAL_ADMIN_EMAIL=
INITIAL_ADMIN_PASSWORD=
INITIAL_ADMIN_NAME=Admin

# --- Integrations ---
# API Keys & Tokens
GROQ_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=
APIFY_TOKEN=
AIRTABLE_TOKEN=
AIRTABLE_BASE_ID=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# --- Media & Limits ---
MAX_VIDEO_SIZE_MB=80
MAX_AUDIO_SIZE_MB=15
FFMPEG_PATH_WIN=
FFPROBE_PATH_WIN=
